{
  "extends": [
    "@quase/eslint-config-base",
    "plugin:react/recommended"
  ],
  "globals": {
    "window": true,
    "document": true,
    "location": true
  },
  "parser": "pluggable-babel-eslint",
  "plugins": [
    "typescript"
  ],
  "rules": {
    "import/extensions": [ 0, "never", { "ts": "never" } ],
    "typescript/no-unused-vars": 1,
    "typescript/no-use-before-define": 1
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.6.1"
    },
    "import/resolver": {
      "node": true,
      "eslint-import-resolver-typescript": true
    }
  }
}
